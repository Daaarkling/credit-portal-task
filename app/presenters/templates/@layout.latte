<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="Credit Portal Task">
	<meta name="author" content="Jan Vaňura">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Credit Portal Task</title>

	<link rel="stylesheet" href="{$basePath}/css/bootstrap.min.css">
	<link rel="stylesheet" href="{$basePath}/css/happy.min.css">
	<link rel="stylesheet" href="{$basePath}/css/style.css">

	{block head}{/block}
</head>

<body class="bg-light">

<nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
	<a class="navbar-brand" n:href="Homepage:">Credit Porta Task</a>
	<button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
		<span class="navbar-toggler-icon"></span>
	</button>


	<div class="navbar-collapse offcanvas-collapse" n:snippet="menu">
		<ul class="navbar-nav mr-auto">
			<li n:if="$user->isLoggedIn()" class="nav-item">
				<a class="nav-link" href="#">{$user->identity->data['name']}</a>
			</li>
			{if $user->isInRole('admin')}
				<li class="nav-item">
					<a class="nav-link" n:href="ThreadEdit:">Vlákna</a>
				</li>
			{/if}
		</ul>
		<ul class="navbar-nav">
			<li class="nav-item">
				{if $user->isLoggedIn()}
					<a class="nav-link" n:href="signOut!">Odhlásit se</a>
				{else}
					<a class="nav-link" n:href="Sign:in">Přihlášení</a>
				{/if}
			</li>
		</ul>
	</div>

</nav>

{snippet flashes}
	<div n:if="count($flashes) > 0" class="container mt-2">
		<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}" role="alert">
			{$flash->message}
		</div>
	</div>
{/snippet}

{snippet content}
	{include content}
{/snippet}

{block scripts}
	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	{*<script src="https://nette.github.io/resources/js/netteForms.min.js"></script>*}
	<script src="{$basePath}/js/nette.ajax.js"></script>
	<script src="{$basePath}/js/nette.init.js"></script>
	<script src="{$basePath}/js/confirm.ajax.js"></script>
	<script src="{$basePath}/js/form-protection.ajax.js"></script>
	<script src="{$basePath}/js/live-form-validation.js"></script>
	<script src="{$basePath}/js/happy.min.js"></script>
	<script src="{$basePath}/js/datagrid.js"></script>
	<script src="{$basePath}/js/datagrid-spinners.min.js"></script>
	<script src="{$basePath}/js/main.js"></script>
{/block}
</body>
</html>

